{
    "name": "vewe/ui",
    "description": "Vewe UI beautifully styled components for Tempest/View",
    "keywords": [
        "components",
        "ui",
        "styled",
        "tempestphp",
        "tempest",
        "vewe"
    ],
    "homepage": "https://github.com/iamdadmin/vewe",
    "support": {
        "issues": "https://github.com/iamdadmin/vewe/issues",
        "source": "https://github.com/iamdadmin/vewe/"
    },
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "iamdadmin",
            "email": "no@email.yet"
        }
    ],
    "require": {
        "tempest/framework": ">=3",
        "vewe/classvariance": ">=0.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "carthage-software/mago": ">=1"
    },
    "autoload": {
        "psr-4": {
            "Vewe\\Ui\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vewe\\Ui\\Tests\\": "tests/",
            "Vewe\\Utility\\": "utility"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-create-project-cmd": [
            "@php ./vendor/bin/tempest install framework -f",
            "@php ./tempest discovery:generate --no-interaction",
            "@php ./tempest key:generate"
        ],
        "post-autoload-dump": [
            "@php ./vendor/bin/tempest discovery:generate --no-interaction"
        ],
        "phpunit": "vendor/bin/phpunit --display-warnings --display-skipped --display-deprecations --display-errors --display-notices",
        "fmt": "vendor/bin/mago fmt",
        "lint": "vendor/bin/mago lint --fix --format-after-fix",
        "twbuild": "tailwindcss -i app/Views/Assets/Build/index.css -o public/assets/main.css",
        "twwatch": [
            "Composer\\Config::disableProcessTimeout",
            "tailwindcss -i app/Views/Assets/Build/index.css -o public/assets/main.css -w"
        ],
        "build": "docker build --pull -t frankenpest:latest .",
        "qa": [
            "composer fmt",
            "composer phpunit",
            "composer lint"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "carthage-software/mago": true
        }
    }
}