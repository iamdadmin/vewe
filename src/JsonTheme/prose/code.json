{
    "slots": {
        "base": "px-1.5 py-0.5 text-sm font-mono font-medium rounded-md inline-block"
    },
    "variants": {
        "color": {
            "$this->color": {
                "base": "border border-'.$this->color.'/25 bg-'.$this->color.'/10 text-'.$this->color"
            },
            "neutral": {
                "base": "border border-muted text-highlighted bg-muted"
            }
        }
    },
    "defaultVariants": {
        "color": "neutral"
    }
}